/* pages/index/index.wxss */
.indexContainer{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.titelContainer{
  display: flex;
}
.box {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  box-sizing: border-box;
}

.left {
  width: 50%;
  display: flex;
  flex-direction: column;
  margin: 6px;
}

.right {
  width: 50%;
  display: flex;
  flex-direction: column;
  margin: 6px;
}
.englishChineseContainer{
  display: flex;
  flex-direction: column;
  align-items: center;    
  vertical-align: center;
  justify-content: center;
  margin-left: 20rpx;
}

.schoolSign{
  width: 260rpx;
  height: 130rpx;
  margin: 0rpx 0;
}

.chineseSchoolName{
  justify-content: center;
  font-size: 170rpx 20rpx;
  font-weight: bold;
  margin-top: 12rpx;
  margin-left: 20rpx;
  color: purple;
}

.englishSchoolName{
  font-size: 22rpx;
  font-weight: bold;
  color: purple;
  margin-left: 20rpx;
}

.mainIndexImage{
  width: 750rpx;
  height: 300rpx;
}

.img{
  width: 100%;
}

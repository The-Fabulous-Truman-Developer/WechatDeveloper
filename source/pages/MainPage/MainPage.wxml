<view class="indexContainer">
  <view class="titelContainer">
     <image class="schoolSign" src="https://sand.truman.edu/cis/WechatSource/Pictures/TrumanSignTitle.png"></image>
     <view class="englishChineseContainer">
        <text class="chineseSchoolName">杜鲁门州立大学信息平台</text>
        <text class="englishSchoolName">Truman General Information Platform</text>
     </view>
  </view>

<swiper indicator-dots="{{indicatorDots}}"
        indicator-active-color="rgb(128, 0, 128)"
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular='true'>
    <swiper-item wx:for="{{imgUrls}}">
      <image src='{{item}}' width="500" height="500" mode='widthFix' class='img'  />
    </swiper-item>
</swiper>

  <view class="infoTrumanContainer">
    <view class="trumanAbout" bindtap="trumanAboutPageChange">
      <text class="trumanAboutTitle"> 关于杜鲁门大学 </text>
      <image class="trumanAboutIcon" src="https://sand.truman.edu/cis/WechatSource/Pictures/truman_icon.png"></image>
    </view>

    <view class="kirksvilleSurrounding" bindtap="kirkSurrPageChange">
      <text class="kirksville">柯克斯维尔周边</text>
      <image class="kirksvilleIcon" src="https://sand.truman.edu/cis/WechatSource/Pictures/kirksville.png"></image>
    </view>

    <view class="kirkTransport" bindtap="kirkTransPageChange">
      <text class="transports">便捷交通与班车</text>
      <image class="kirkTransportIcon" src="https://sand.truman.edu/cis/WechatSource/Pictures/kirkTransit.png"></image>
    </view>
  </view>

  <view class="infoScholarshipBulletinSSASContainer">
    <view class="Scholarship" catchtap="ScholarshipProgramPageChange" >
      <text class="text_purple_emphasize">杜鲁门奖学金计划</text>
      <image class='bannerStyle1'  src='https://sand.truman.edu/cis/WechatSource/Pictures/scholarshipProgram.png'></image>
    </view>

    <view class="TrumanIHouse" catchtap="TrumanIHousePageChange">
      <text class="text_purple_emphasize">Truman iHouse</text>
      <image class='bannerStyle1' src='https://sand.truman.edu/cis/WechatSource/Pictures/ihouse_bar.png'></image>
    </view>
  </view>

  <view class="alumiGalleryContainer">
    <view class="alumi" catchtap="AlumiPageChange">
      <view class="alumiAndGradFont">毕业生与校友</view>
      <image class='graduatesAlumni'  src='https://sand.truman.edu/cis/WechatSource/Pictures/graduatesAlumini.png'></image>
    </view>
    <view class="gallery" catchtap="GalleryPageChange">
      <view class="SchoolGalleryText">Truman影集</view>
      <image class='graduatesAlumni' src='https://sand.truman.edu/cis/WechatSource/Pictures/TrumanGalleryBG.png'></image>
    </view>
  </view>
</view>

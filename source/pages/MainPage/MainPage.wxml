<body>
  <view class="MainPageTitle">
    <image class="schoolSign" src="https://sand.truman.edu/cis/WechatSource/Pictures/TrumanSignTitle.png"></image>
    <view class="InformationPlatformTitle">
      <text class="chineseSchoolName">杜鲁门州立大学信息平台</text>
      <text class="englishSchoolName">Truman General Information Platform</text>
    </view>
  </view>

  <swiper indicator-dots="{{indicatorDots}}" indicator-active-color="rgb(128, 0, 128)" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular='true'>
    <swiper-item wx:for="{{imgUrlsList}}" wx:key="*this" wx:for-index="index" >
      <image src='{{item}}' width="700" height="500" mode='widthFix' class='gallery_swiper' bindtap="click_img" data-index="{{index}}" />
    </swiper-item>
  </swiper>

  <view class="AboutServiceAndTransport">
    <view class="trumanAbout" catchtap="trumanAboutPageChange">
      <text class="trumanAboutTitle"> 关于杜鲁州立大学 </text>
      <image class="trumanAboutIcon" src="https://sand.truman.edu/cis/WechatSource/Pictures/truman_icon_trans_2.png"></image>
    </view>

    <view class="CampusService" catchtap="CampusServicePageChange">
      <text class="Service">校园服务与安全</text>
      <image class="truman_services_security" src="https://sand.truman.edu/cis/WechatSource/Pictures/service_security.png"></image>
    </view>

    <view class="kirkTransport" catchtap="kirkTransPageChange">
      <text class="TransportPrompt">便捷交通与班车</text>
      <image class="kirkTransportIcon" src="https://sand.truman.edu/cis/WechatSource/Pictures/kirkTransit.png"></image>
    </view>
  </view>

  <view class="Scholarship_SSAS_TrumanMusic" style="width: 732rpx; height: 874rpx; display: flex; box-sizing: border-box">
    <view class="Scholarship" catchtap="ScholarshipProgramPageChange">
      <text class="TrumanScholarshipPlan">杜鲁门奖学金计划</text>
      <image class='ScholarshipBackground' src='https://sand.truman.edu/cis/WechatSource/Pictures/scholarshipProgram.png'></image>
    </view>

<view class="grid_layout">
    <view class="SSAS" catchtap="SSASPPageChange">
      <text class="SSASPrompt"> 中美学生会 </text>
      <image class="dual_square_icons"src='https://sand.truman.edu/cis/WechatSource/Pictures/SSAS_icon.png'></image>
    </view>

    <view class="TrumanMusic" catchtap="TrumanMusicPageChange" >
      <view class="TrumanMusicPrompt">Truman音乐</view>
      <image class="dual_square_icons"src='https://sand.truman.edu/cis/WechatSource/Pictures/music_school_icon.png'></image>
    </view>
</view>

    <view class="gallery" catchtap="GalleryPageChange" style="width: 732rpx; height: 874rpx; display: flex; box-sizing: border-box">
      <view class="SchoolGalleryText">Truman影集</view>
      <image class='GalleryPicture' src='https://sand.truman.edu/cis/WechatSource/Pictures/TrumanGalleryBG_3.png'></image>
    </view>
</view>

</body>
